# Server Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# Database Configuration
# In production with Docker Compose, DB_HOST will be the service name 'db'
DB_HOST=db
DB_PORT=5432
DB_USERNAME=ceygo_user
DB_PASSWORD=your_secure_db_password
DB_DATABASE=ceygo_prod
DB_SSL=false

# Redis Configuration
# In production with Docker Compose, REDIS_HOST will be the service name 'redis'
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=generate_a_random_secure_string_64_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=generate_another_random_secure_string
JWT_REFRESH_EXPIRES_IN=30d

# OTP Configuration
OTP_EXPIRES_IN=300
OTP_LENGTH=6

# Notify.lk Configuration
NOTIFY_API_KEY=your_notify_api_key
NOTIFY_USER_ID=your_notify_user_id
NOTIFY_SENDER_ID=NotifyLK

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
# Client_ID=your_commented_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://api.ceygo.lk/api/v1/auth/google/callback

# Firebase Configuration (Storage & FCM)
FIREBASE_PROJECT_ID=ceygoapp-92676
FIREBASE_STORAGE_BUCKET=ceygoapp-92676.firebasestorage.app
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@ceygoapp-92676.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n",


# Payment Gateway - PayHere
PAYHERE_MERCHANT_ID=your_payhere_merchant_id
PAYHERE_SECRET=your_payhere_secret
PAYHERE_SANDBOX=false
PAYHERE_RETURN_URL=https://ceygo.lk/payment/success
PAYHERE_CANCEL_URL=https://ceygo.lk/payment/cancel
PAYHERE_NOTIFY_URL=https://api.ceygo.lk/api/v1/payments/notify

# OpenExchangeRates Configuration
OPEN_EXCHANGE_RATES_APP_ID=your_app_id

# Commission Configuration
COMMISSION_PERCENTAGE=15

# CORS
CORS_ORIGIN=https://ceygo.lk,https://admin.ceygo.lk

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=120
